<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sqisoft.moldcreateapp.Fragment.FragmentWaitng"
    android:background="@drawable/bg_2200">


    <ImageView
        android:id="@+id/arrow_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="74dp"/>

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment"
        android:id="@+id/touch_pad"/>
    <TextView
        android:visibility="gone"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_X"
        android:text="X 좌표"
        android:layout_gravity="center"/>
    <TextView
        android:visibility="gone"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_Y"
        android:text="Y 좌표"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/sending_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/moldicon"
        android:layout_gravity="center"
        />

</FrameLayout>
