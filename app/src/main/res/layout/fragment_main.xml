<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sqisoft.moldcreateapp.Fragment.FragmentMain"
    android:background="@drawable/bg_2000_1">


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUNCHANG MEDIA ART"
            android:textColor="#8cf9a0"
            android:textSize="17dp"
            android:id="@+id/sunchang"
            android:typeface="monospace"/>

    <TextView
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="발효 곰팡이 4총사"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:id="@+id/mold_intro_title_textView"
        android:layout_below="@+id/sunchang"
        android:layout_centerHorizontal="true"
        android:typeface="serif"/>


        <ImageView
            android:layout_marginTop="19dp"
            android:id="@+id/underbar"
           android:layout_below="@+id/mold_intro_title_textView"
           android:layout_marginBottom="19dp"
           android:layout_centerHorizontal="true"
           android:layout_width="35dp"
           android:layout_height="3dp"
           android:background="#ffffff"/>


    <TextView
        android:typeface="serif"
            android:layout_marginTop="18dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/underbar"
            android:id="@+id/info_textView"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="색칠하고 싶은\n 곰팡이를 선택해 보세요"
            android:textSize="20dp"
            android:textColor="#ffffff"
            />


   <RelativeLayout
       android:layout_marginTop="58dp"
       android:layout_below="@+id/info_textView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/relativeLayout">

       <RelativeLayout
           android:layout_marginLeft="167dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/mold_layout_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/mold_01_button"
                android:src="@drawable/image_button"
                android:layout_gravity="center"
                android:layout_width="345dp"
                android:layout_height="341dp"
                android:background="@drawable/mold_01s"/>
            <TextView
                android:layout_marginTop="-40dp"
                android:id="@+id/mold_01_index"
                android:layout_below="@+id/mold_01_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01."
                android:typeface="monospace"
                android:textColor="#19dca9"
                android:textSize="40dp"/>
            <TextView
                android:typeface="serif"
                android:id="@+id/mold_01_name"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="24.5dp"
                android:layout_below="@+id/mold_01_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좁쌀\n곰팡이"/>
        </RelativeLayout>

       <RelativeLayout
           android:layout_marginLeft="90dp"
           android:id="@+id/mold_layout_02"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/mold_layout_01">

           <ImageButton
               android:id="@+id/mold_02_button"
               android:src="@drawable/image_button"
               android:layout_gravity="center"
               android:layout_width="345dp"
               android:layout_height="341dp"
               android:background="@drawable/mold_02s"/>
           <TextView
               android:layout_marginTop="-40dp"
               android:id="@+id/mold_02_index"
               android:layout_below="@+id/mold_02_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="02."
               android:typeface="monospace"
               android:textColor="#19dca9"
               android:textSize="40dp"/>
           <TextView
               android:typeface="serif"
               android:id="@+id/mold_02_name"
               android:layout_marginTop="10dp"
               android:textColor="#ffffff"
              android:textSize="24.5dp"
               android:layout_below="@+id/mold_02_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="누룩\n곰팡이"/>
       </RelativeLayout>

       <RelativeLayout
           android:layout_marginLeft="90dp"
           android:id="@+id/mold_layout_03"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/mold_layout_02">

           <ImageButton
               android:id="@+id/mold_03_button"
               android:src="@drawable/image_button"
               android:layout_gravity="center"
               android:layout_width="345dp"
               android:layout_height="341dp"
               android:background="@drawable/mold_03s"/>
           <TextView
               android:layout_marginTop="-40dp"
               android:id="@+id/mold_03_index"
               android:layout_below="@+id/mold_03_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="03."
               android:typeface="monospace"
               android:textColor="#19dca9"
               android:textSize="40dp"/>
           <TextView
               android:typeface="serif"
               android:id="@+id/mold_03_name"
               android:layout_marginTop="10dp"
               android:textColor="#ffffff"
              android:textSize="24.5dp"
               android:layout_below="@+id/mold_03_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="솜사탕\n곰팡이"/>
       </RelativeLayout>

       <RelativeLayout
           android:layout_marginLeft="90dp"
           android:id="@+id/mold_layout_04"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/mold_layout_03">

           <ImageButton
               android:id="@+id/mold_04_button"
               android:src="@drawable/image_button"
               android:layout_gravity="center"
               android:layout_width="345dp"
               android:layout_height="341dp"
               android:background="@drawable/mold_04s"/>
           <TextView
               android:layout_marginTop="-40dp"
               android:id="@+id/mold_04_index"
               android:layout_below="@+id/mold_04_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="04."
               android:typeface="monospace"
               android:textColor="#19dca9"
               android:textSize="40dp"/>
           <TextView
               android:typeface="serif"
               android:id="@+id/mold_04_name"
               android:layout_marginTop="10dp"
               android:textColor="#ffffff"
              android:textSize="24.5dp"
               android:layout_below="@+id/mold_04_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="털\n곰팡이"/>
       </RelativeLayout>
       </RelativeLayout>


   </RelativeLayout>


</RelativeLayout>
